<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:transitionName="@string/square_blue_name"
    android:clickable="true"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/relative"
        android:layout_height="match_parent"
        android:transitionName="@string/square_blue_name"
        android:clickable="true"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar">


    <ImageView
        android:id="@+id/great"
        android:layout_width="130dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        android:src="@drawable/great_job"
        android:layout_gravity="center"/>


        <com.buychat.utils.fonts.TextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="You have successfully signed up with BuyChat.\nYour mobile number is your BuyerChat ID"/>

        <com.buychat.utils.fonts.TextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="BuyChat ID"/>

        <com.buychat.utils.fonts.TextViewBold
            android:id="@+id/buychat_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="65577687"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/default_profile_image"/>

        <com.buychat.utils.fonts.EditTextRegular
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:hint="Enter your name"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:imeOptions="actionDone"
            android:gravity="center"
            android:background="@drawable/border_green"
            />

        <com.buychat.utils.fonts.TextViewBold
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="SELECT CITY"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinner_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/border_green"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"></Spinner>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="23dp"
                android:src="@drawable/right_arrow_green"/>

        </RelativeLayout>



    </LinearLayout>


    <com.buychat.utils.fonts.ButtonMedium
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_selector_green"
        android:text="@string/continue_button"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />
</RelativeLayout>

</RelativeLayout>
