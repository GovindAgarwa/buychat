<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerInside"
        android:src="@drawable/empty_logo_image"
        android:id="@+id/background_image"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/empty_logo_image"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/shop_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="8dp"
                    android:src="@drawable/shop_icon"/>

                <com.buychat.utils.fonts.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:singleLine="true"
                    android:text="Shop"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ask_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="8dp"
                    android:src="@drawable/ask_question"/>

                <com.buychat.utils.fonts.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:singleLine="true"
                    android:text="Ask Question"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/news_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="8dp"
                    android:src="@drawable/news_icon"/>

                <com.buychat.utils.fonts.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:singleLine="true"
                    android:text="News"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/grey"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"

            android:orientation="vertical">

            <com.buychat.utils.fonts.TextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="BuyChat ID"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black" />

            <com.buychat.utils.fonts.TextViewRegular
                android:id="@+id/buy_chat_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:text="31256242212"
                android:textAppearance="@android:style/TextAppearance.Small"
                />
        </LinearLayout>

        <View
            android:id="@+id/social_view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#326b6d6e"></View>

        <LinearLayout
            android:id="@+id/social_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <com.buychat.utils.fonts.TextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Social Media"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp">

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/facebook"/>

                <ImageView
                    android:id="@+id/linkedin"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/linkedin"/>

                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/twitter"/>

            </LinearLayout>
        </LinearLayout>


        <View
            android:id="@+id/website_view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/grey"></View>

        <LinearLayout

            android:id="@+id/website_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:orientation="vertical">

            <com.buychat.utils.fonts.TextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Official Website"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black" />

            <com.buychat.utils.fonts.TextViewRegular
                android:id="@+id/official_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:paddingLeft="16dp"
                android:text="www.sheratonhotel.com"
                android:textAppearance="@android:style/TextAppearance.Small"
                />
        </LinearLayout>


        <View
            android:id="@+id/video_view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/grey"></View>

        <com.buychat.utils.fonts.TextViewBold
            android:id="@+id/video_layout"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Videos"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/black" />
        <WebView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp" />


        <!--<LinearLayout-->
            <!--android:id="@+id/video_layout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginTop="15dp"-->

            <!--android:orientation="vertical">-->

          <!---->

            <!--&lt;!&ndash;<fragment&ndash;&gt;-->
                <!--&lt;!&ndash;android:name="com.google.android.youtube.player.YouTubePlayerSupportFragment"&ndash;&gt;-->
                <!--&lt;!&ndash;android:id="@+id/youtube_fragment"&ndash;&gt;-->
                <!--&lt;!&ndash;android:layout_width="match_parent"&ndash;&gt;-->
                <!--&lt;!&ndash;android:layout_height="wrap_content"/>&ndash;&gt;-->

          <!---->
        <!--</LinearLayout>-->


        <View
            android:id="@+id/description_view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/grey"></View>


        <LinearLayout
            android:id="@+id/description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:orientation="vertical">

            <com.buychat.utils.fonts.TextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Description"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black" />

            <com.buychat.utils.fonts.TextViewRegular
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:paddingLeft="16dp"
                android:text="Located in the industrial Ikeja area, the Sheraton Lagos Hotel is close to Murtala Mohammed International ... A warm welcome to Lagos, the heartbeat of Nigeria."
                android:textAppearance="@android:style/TextAppearance.Small"
                />
        </LinearLayout>





    </LinearLayout>
</LinearLayout>