<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/white"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/addMoreItems"
        android:weightSum="2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:text="+ Add More Items"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/green" />

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <RelativeLayout
        android:weightSum="2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/product_prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:text="Sub Total"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/item_count"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@+id/product_prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="(4 items)"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/black" />
        <ImageView
            android:visibility="gone"
            android:layout_toLeftOf="@+id/subtotal"
            android:id="@+id/images"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/money" />
        <TextView
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:id="@+id/subtotal"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="200000"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/package_layout"
        android:weightSum="2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Packages Charges"
            android:textAppearance="@android:style/TextAppearance.Small"
            />


        <ImageView
            android:visibility="gone"
            android:layout_toLeftOf="@+id/package_charge"
            android:id="@+id/imagess"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/money" />


        <TextView
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:id="@+id/package_charge"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="200000"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <View
        android:visibility="gone"
        android:id="@+id/package_view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/delivery_layout"
        android:weightSum="2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Delivery Charges"
            android:textAppearance="@android:style/TextAppearance.Small"
            />


        <ImageView
            android:visibility="gone"
            android:layout_toLeftOf="@+id/delivery_charge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/money" />


        <TextView
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:id="@+id/delivery_charge"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="200000"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <View
        android:id="@+id/delivery_view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>
    <RelativeLayout
        android:weightSum="2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Grand Total"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/black" />


        <ImageView
            android:visibility="gone"
            android:layout_toLeftOf="@+id/product_price"
            android:id="@+id/image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/money" />


        <TextView
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:id="@+id/grand_total"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="200000"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <RelativeLayout
        android:weightSum="2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Paymode Mode"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/black" />


        <ImageView
            android:visibility="gone"
            android:layout_toLeftOf="@+id/product_price"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/money" />


        <TextView
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:id="@+id/payment_mode"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="200000"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>
    <RelativeLayout
        android:weightSum="2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Order Status"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/black" />


        <ImageView
            android:visibility="gone"
            android:layout_toLeftOf="@+id/product_price"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/money" />


        <TextView
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:id="@+id/order_status"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="200000"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <RelativeLayout
        android:weightSum="2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Order Id"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/black" />


        <ImageView
            android:visibility="gone"
            android:layout_toLeftOf="@+id/product_price"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/money" />


        <TextView
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:id="@+id/order_id"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="200000"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>
</LinearLayout>
